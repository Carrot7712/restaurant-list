<form action="/restaurants" method="POST" id="create">
  <div class="container mt-3">
    <div class="row">

      <div class=" col-12 col-md-10 mx-auto">

        <p class="mb-1">
          <span>
            <i class="fas fa-utensils pr-1"></i>
            餐廳名稱 <span class="required">*</span>
          </span>
        <div class="input-group">
          <input type="text" class="form-control" placeholder="餐廳名稱" name="name" value="">
        </div>
        </p>

        <p class="mb-1">
          <span>
            <i class="fas fa-signature pr-1"></i>
            英文名稱
          </span>
        <div class="input-group">
          <input type="text" class="form-control" placeholder="English name" name="name_en" value="">
        </div>
        </p>

        <p class="mb-1">
          <label for="category">
            <i class="fas fa-filter pr-1"></i>
            類別 <span class="required">*</span>
          </label>
        <div class="input-group">

          <select id="category" class="form-control" name="category">
            <option>選擇餐廳類型</option>
            <option>美式餐廳</option>
            <option>日式餐廳</option>
            <option>義式餐廳</option>
            <option>中東料理</option>
            <option>北歐咖啡</option>
            <option>高空酒吧</option>
          </select>
        </div>
        </p>

        <p class="mb-1">
          <span>
            <i class="fas fa-map-pin pr-1"></i>
            地址 <span class="required">*</span>
          </span>
        <div class="input-group">
          <input type="text" class="form-control" placeholder="餐廳地址" name="location" value="">
        </div>
        </p>

        <p class="mb-1">
          <span>
            <i class="fas fa-phone pr-1"></i>
            電話 <span class="required">*</span>
          </span>
        <div class="input-group">
          <input type="text" class="form-control" placeholder="02 2828 1234" name="phone" value="">
        </div>
        </p>

        <p class="mb-1">
          <span>
            <i class="fas fa-star-half-alt pr-1"></i>
            評分 <span class="required">*</span>
          </span>
        <div class="input-group">
          <input type="number" class="form-control" placeholder="0到5分" name="rating" placeholder="0~5" step="0.1"
            min="0" max="5" value="">
        </div>
        </p>

        <p class="mb-1">
          <span>
            <i class="fas fa-info-circle pr-1"></i>
            餐廳詳情
          </span>
        <div class="input-group">
          <textarea class="form-control" placeholder="介紹您的餐廳" name="description" style="height: 5em;"></textarea>
        </div>
        </p>

        <p class="mb-1">
          <span>
            <i class="fas fa-camera pr-1"></i>
            照片
          </span>
        <div class="input-group">
          <input type="text" class="form-control" placeholder="http://" name="image" value="">
        </div>
        </p>

        <p class="mb-1">
          <span>
            <i class="fas fa-map-marked-alt pr-1"></i>
            Google Map
          </span>
        <div class="input-group">
          <input type="text" class="form-control" placeholder="http://" name="google_map" value="">
        </div>
        </p>


        <div class="text-center mb-4">
          <button type="submit" class="mx-auto btn btn-outline-primary">新增</button>
          <a href="/">
            <button class="ml-3 btn btn-outline-primary" type="button">返回</button>
          </a>

        </div>

      </div>
    </div>
  </div>
</form>